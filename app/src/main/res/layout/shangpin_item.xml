<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <CheckBox
        android:id="@+id/cb_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:id="@+id/good_icon"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toRightOf="@id/cb_goods"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@color/colorAccent"
        />
    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/good_icon"
        app:layout_constraintLeft_toRightOf="@id/good_icon"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="sdfsf"
        android:textSize="@dimen/sp_14"
        />
    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@id/good_icon"
        app:layout_constraintLeft_toLeftOf="@id/tv_goods_name"
        android:gravity="center"
        android:text="sdfkjshfkjd"
        android:layout_marginBottom="15dp"
        />
    <com.example.mryang.yuekaomoni0118.ui.weigeb.CalculationView
        android:id="@+id/cv_Calculation"
        android:layout_width="140dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_10"
        ></com.example.mryang.yuekaomoni0118.ui.weigeb.CalculationView>
</android.support.constraint.ConstraintLayout>
